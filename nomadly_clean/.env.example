# Nomadly2 Domain Registration Bot Configuration
# Copy this file to .env and fill in your actual values

# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
ADMIN_CHAT_ID=your_telegram_user_id_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/nomadly2

# OpenProvider API (Domain Registration)
OPENPROVIDER_USERNAME=your_openprovider_username
OPENPROVIDER_PASSWORD=your_openprovider_password

# Cloudflare API (DNS Management)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_EMAIL=your_cloudflare_email

# BlockBee API (Cryptocurrency Payments)
BLOCKBEE_API_KEY=your_blockbee_api_key

# Optional: Webhook Configuration
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_PORT=8000